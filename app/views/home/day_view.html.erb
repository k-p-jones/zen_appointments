<!-- error display for events falling outside of calender hours -->
<% unless @events_outside_hours.empty? %>
	<div class="row">
		<div class="col-xs-12">
			<div class="alert alert-danger">
				<h4>Warning</h4>
				<p>The following events either start or end outside of your calender display hours and will not be displayed. Please either edit the event time or adjust your calender hours accordingly.</p>
				<ul>
					<% @events_outside_hours.each do |e| %>
						<li><%= link_to e.description, event_path(e)%></li>
					<% end %>
				</ul>
			</div>

		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-xs-12 text-right">
		<div class="day_icons">
		<%= link_to edit_option_path(current_user.option.id) do %>
			<%= image_tag('settings.png') %>
		<% end %>
		<%= link_to "#", class: "toggle hidden-sm hidden-md hidden-lg hidden-xl" do %>
			<%= image_tag('pencil.png') %>
		<% end %>
		<%= link_to root_path do  %>
			<%= image_tag('calendar.png') %>
		<% end %>
		</div>
	</div>
</div>	

<div class="row">
	<div class="hidden-sm hidden-md hidden-lg hidden-xl col-xs-12">
		<div id="small_event_form">
			<div id="form_heading">
	    		<h3>New Appointment</h3>
	    		<hr>
	  		</div>
			<%= render 'event_form' %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-6">
		<div class="planner">
			<div class="heading text-center planner_controls">
				<h3>
					<%= link_to date: @date.yesterday do %>
						<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
					<% end %>
					<%= format_date(@date) %>
					<%= link_to date: @date.tomorrow do %>
						<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
					<% end %>
				</h3>
			</div>
			<div class="my_day">
				<%= day_planner(@todays_events, @options) %>
			</div>
		</div>	
	</div>
	<div class="hidden-xs col-sm-6">
		<div id="event_form">
			<div id="form_heading">
	    		<h3>New Appointment</h3>
	    		<hr>
	  		</div>
			<%= render 'event_form' %>
		</div>
	</div>
</div>

<div class="my_day">
	
</div>