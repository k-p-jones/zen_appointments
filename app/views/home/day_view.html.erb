<div class="row">
	<div class="col-xs-12 text-right">
		<div class="day_icon">
		<%= link_to root_path do  %>
			<%= image_tag('calendar.png') %>
		<% end %>
		</div>
	</div>
</div>	

<div class="row">
	<div class="col-sm-6">
		<div class="planner">
			<div class="heading text-center">
				<h3><%= format_date(@date) %></h3>
			</div>
			<div class="my_day">
				<%= day_planner(@todays_events) %>
			</div>
		</div>	
	</div>
	<div class="col-sm-6">
		<div id="event_form">
			<div id="form_heading">
	    		<h3>New Appointment</h3>
	    		<hr>
	  		</div>
			<%= render 'event_form' %>
		</div>
	</div>
</div>

<div class="my_day">
	
</div>