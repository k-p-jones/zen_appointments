<%= form_for(@option) do |f| %>
    <% if session[:errors] %>
        <p class="alert alert-error">Ooops! Please correct the following: 
        <ul>
          <% session[:errors].each do |msg| %>
            <li class="error"><%= msg %></li>
          <% end %>
        </ul> 
      </p>
      <% session[:errors] = nil %>
    <% end %>
    
    <!-- start_time -->
    <div class="form-group">
      <%= f.label :calender_start_time %><br>
      <%= f.select(:calender_start_time, ("00".."24"), {}, {:class => "form-control"}) %>
    </div>
    <!-- end time -->
    <div class="form-group">
      <%= f.label :calender_end_time %><br>
      <%= f.select(:calender_end_time, ("00".."24"), {}, {:class => "form-control"}) %>
    </div>
    <hr>
    <div class="actions">
      <%= f.submit "Update Settings", :class => "btn btn-success" %>
    </div>
  <% end %>
</div>